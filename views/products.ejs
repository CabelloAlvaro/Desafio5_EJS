<h2 style="color:rgba(220, 20, 60, 0.689);">PRODUCTOS CARGADOS</h2>

<% if(products.length > 0){ %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: blueviolet;"> <th>Title</th> <th>Price</th> <th>Url</th> </tr>
            <% for (const product of products) {%>
            <tr>
                <td><%=product.title%></td>
                <td> $ <%=product.price%></td>
                <td><%=product.url%></td>
            </tr>
            <%};%>
        </table>
    </div>
<% } else{ %>
    <h3 class="alert alert-danger">No hay productos cargados</h1>
<% } %>

<a href="/"> <button class="btn btn-danger"> UPLOAD PRODUCT </button> </a>